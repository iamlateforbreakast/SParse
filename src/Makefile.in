CFLAGS = @CFLAGS@ -I./AppliLib/include -I./ParseLib/include -I./CommonLib/include

LDFLAGS = @LDFLAGS@ -L./CommonLib -L./Applib -L./ParseLib -lCommon -lAppli -lParse

.c.o:
	@CC@ $(CFLAGS) $< -o $@

EXE = sparse

SOURCES = ./main.c

OBJECTS = $(SOURCES:.c=.o)

LIBRARIES = ./CommonLib/libCommon.a \
	    ./AppliLib/libAppli.a \
	    ./ParseLib/libParse.a

all: $(EXE)

$(EXE): $(LIBRARIES) $(OBJECTS)
	@CC@ $(OBJECTS) $(LIBRARIES) $(LDFLAGS) -o $(EXE)

$(LIBRARIES):
	echo "Building " $@
	make -C $(@D)
clean:
	@CLEAN@ $(LIBRARIES)
	@CLEAN@ ./*/include
	@CLEAN@ ./*/*/*.o
	@CLEAN@ $(OBJECT) $(EXE)

distclean:

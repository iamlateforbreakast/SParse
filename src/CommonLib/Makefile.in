CFLAGS = @CFLAGS@ -I./AppliLib/include -I./ParseLib/include -I./CommonLib/include

LDFLAGS = @LDFLAGS@ -L./CommonLib -L./AppliLib -L./ParseLib -lCommon -lAppli -lParse -lsqlite3

.c.o:
	@CC@ $(CFLAGS) $< -o $@

EXE = sparse

SOURCES = ./main.c

OBJECTS = $(SOURCES:.c=.o)

LIBRARIES = ./CommonLib/libCommon.a \
	    ./AppliLib/libAppli.a \
	    ./ParseLib/libParse.a

SUBDIRS = $(dir $(LIBRARIES))

all: $(EXE)

$(EXE): $(LIBRARIES) $(OBJECTS)
	@CC@ $(OBJECTS) $(LIBRARIES) $(LDFLAGS) -o $(EXE)

$(SUBDIRS):
    echo "Building " $@
    $(MAKE) -C $@ $(MAKECMDGOALS)
	
clean:
	@CLEAN@ $(LIBRARIES)
	@CLEAN@ ./*/include
	@CLEAN@ ./*/*/*.o
	@CLEAN@ $(OBJECT) $(EXE)

distclean:

.PHONY: all clean $(SUBDIRS)